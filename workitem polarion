import React, { useState } from 'react';
import Popup from './components/Popup';
import "./App.css";
const App = () => {
 const [showPopup, setShowPopup] = useState(false);
 const [popupPosition, setPopupPosition] = useState({ x: 0, y: 0 });
 const handleButtonClick = (event) => {
   const { clientX, clientY } = event;
   setPopupPosition({ x: clientX, y: clientY });
   setShowPopup(true);
 };
 const handleClose = () => {
   setShowPopup(false);
 };
 const workitems = [
   {
     id: 1,
     value1: 80,
     value2: 60,
     value3: 90,
   },
   {
     id: 2,
     value1: 50,
     value2: 40,
     value3: 70,
   },
   {
     id: 3,
     value1: 30,
     value2: 20,
     value3: 50,
   },
 ];
 return (
  <div>
  <div>
      <h1 class="text-center" >Polarion Work Item</h1>
  </div>

<div className="app">
     {workitems.map((workitem) => (
      <>
        <div class="d-flex p-3 bg-secondary text-white justify-content-around">
        <h5>WorkItem {workitem.id} </h5> 
        <button className="btn btn-primary open-btn" onClick={handleButtonClick}> Open Popup</button>
      </div>
      </>

     ))}
     {showPopup && (
<Popup
         onClose={handleClose}
         workitem={workitems.find((workitem) => workitem.id === 1)} // Modify to pass the desired workitem based on the clicked button
       />
     )}
</div>
</div>
 );
};
export default App;

